{% extends "QPvBundle::template.html.twig" %}

{% block content %}

<h1>{{ entity.nombre | slice(0, 30)}}</h1>
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Descripcion</th>
            <td>{{ entity.descripcion }}</td>
        </tr>
        <tr>
            <th>Fechacreacion</th>
            <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Fechamodificacion</th>
            <td>{{ entity.fechaModificacion|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Activo</th>
            <td>{{ entity.activo }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('almacen_index') }}">
            Almacenes
        </a>
    </li>
    <li>
        <a href="{{ path('panel_almacen_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        {#
        <form action="{{ path('panel_almacen_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar</button>
        </form>
        #}    
    </li>
</ul>
{% endblock %}
