{% extends "QPvBundle::template.html.twig" %}
{% block title %}Tiendas - Panel{% endblock %}
{% block content %}
    <h1>Mis tiendas:</h1>

    <table class="records_list" >
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('tienda_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                    <td>{{ entity.telefono1 }}</td>
                    <td><a href="mailto:{{ entity.email }}">{{ entity.email }}</a></td>
                    <td>
                        <ul>
                            {#
                            <li>
                                <a href="{{ path('tienda_show', { 'id': entity.id }) }}">Ver</a>
                            </li>
                             #}
                            <li>
                                <a href="{{ path('tienda_edit', { 'id': entity.id }) }}">Editar</a>
                            </li>
                           
                        </ul>
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a class="fsbutton_ok" href="{{ path('tienda_new') }}">
                    Crear nueva tienda
                </a>
            </li>
        </ul>
    {% endblock %}
