{% extends "QPvBundle::template.html.twig" %}
{% block title %}Impuestos - Panel{% endblock %}
{% block content %}
    <h1>Impuestos</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Porcentaje</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('impuesto_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>{{ entity.porcentaje }} % </td>
                <td>
                <ul>
                    {#<li>
                        <a href="{{ path('impuesto_show', { 'id': entity.id }) }}">Ver</a>
                    </li>#}
                    <li>
                        <a href="{{ path('impuesto_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="fsbutton_ok" href="{{ path('impuesto_new') }}">
                Nuevo Impuesto
            </a>
        </li>
    </ul>
    {% endblock %}