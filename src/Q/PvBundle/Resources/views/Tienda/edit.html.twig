    <form action="{{ path('tienda_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {% form_theme edit_form 'QPvBundle:Error:error_field.html.twig'%}
        {{ form_widget(edit_form, {'attr' : {'class' : 'form_new'}}) }}
        <p>
            <button class="fsbutton_ok" type="submit">Editar</button>
        </p>
    </form>

